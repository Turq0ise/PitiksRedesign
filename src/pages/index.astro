---
import "../styles/index.css";

import MainLayout from "../layouts/MainLayout.astro";
import Form from "../components/Form.astro"

import i101 from "../assets/images/101.webp";
import i103 from "../assets/images/103.webp";
import i201 from "../assets/images/201.webp";

import { Image } from "astro:assets";

const servicesDir = "/PitiksRedesign/services";
const contactDir = "/PitiksRedesign/contact";
---

<MainLayout>
	<div class="hero-section" id="hero-section">
        <section class="main-info">
            <h1>Capturing memories, one frame at a time</h1>
            <div class="ctas">
                <a href={contactDir}>Contact</a>
                <a href={servicesDir}>Services</a>
            </div>
        </section>

        <section class="pics" id="pics-container">
            <Image class="vertical" src={i201} quality="mid" alt="" loading="eager"/>
            <Image class="vertical" src={i103} quality="mid" alt="" loading="eager"/>
            <Image class="horizontal" src={i101} quality="mid" alt="" loading="eager"/>
        </section>
    </div>

    <div class="about-section">
        <div class="main-info">
            <h2>About Us</h2>
            <p>Coming from the bright students of MAWD102/202 from S.T.I. Ortigas Extension. We are Pitiks, an on-campus Information Technology Student Organization that specializes in providing photography services within our campus.</p>
        </div>
        <a href="/about">Learn More</a>
    </div>

    <div class="form-section">
        <Form/>
    </div>
</MainLayout>
