---
import "../styles/global.css";

const { title = "Pitiks" } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const faviconSrc = "/PitiksRedesign/favicon/";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="180x180" href={faviconSrc + "apple-touch-icon.png"}>
    <link rel="icon" type="image/png" sizes="32x32" href={faviconSrc + "favicon-32x32.png"}>
    <link rel="icon" type="image/png" sizes="16x16" href={faviconSrc + "favicon-16x16.png"}>
    <link rel="manifest" href={faviconSrc + "site.webmanifest"}>
    <link rel="mask-icon" href={faviconSrc + "safari-pinned-tab.svg"} color="#0d121c">
    <meta name="msapplication-TileColor" content="#fcfdfc">
    <meta name="theme-color" content="#fcfdfc">
    <script src="https://kit.fontawesome.com/e00005890a.js" crossorigin="anonymous" defer></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
</head>
<body>
    <script>import "../scripts/global.js";</script>
    <Header/>
    <slot/>
    <Footer/>
</body>
</html>